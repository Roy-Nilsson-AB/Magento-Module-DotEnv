# Example .env file for Magento 2
# Copy this file to .env and customize for your environment

# =============================================================================
# Application Settings
# =============================================================================
APP_ENV=prod
APP_NAME="Magento Store"

# =============================================================================
# Database Configuration (using Magento's #env() syntax in env.php)
# =============================================================================
DB_HOST=localhost
DB_NAME=magento
DB_USER=magento_user
DB_PASS=password

# =============================================================================
# Database Configuration (using Magento's CONFIG__ prefix)
# Alternative approach - these override app/etc/env.php directly
# =============================================================================
# CONFIG__DEFAULT__DB__CONNECTION__DEFAULT__HOST=localhost
# CONFIG__DEFAULT__DB__CONNECTION__DEFAULT__DBNAME=magento
# CONFIG__DEFAULT__DB__CONNECTION__DEFAULT__USERNAME=magento_user
# CONFIG__DEFAULT__DB__CONNECTION__DEFAULT__PASSWORD=password

# =============================================================================
# Redis Cache Configuration
# =============================================================================
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_DB=0

# Using CONFIG__ prefix:
# CONFIG__DEFAULT__CACHE__FRONTEND__DEFAULT__BACKEND=Cm_Cache_Backend_Redis
# CONFIG__DEFAULT__CACHE__FRONTEND__DEFAULT__BACKEND_OPTIONS__SERVER=redis
# CONFIG__DEFAULT__CACHE__FRONTEND__DEFAULT__BACKEND_OPTIONS__PORT=6379
# CONFIG__DEFAULT__CACHE__FRONTEND__DEFAULT__BACKEND_OPTIONS__DATABASE=0

# =============================================================================
# Session Storage
# =============================================================================
# CONFIG__DEFAULT__SESSION__SAVE=redis
# CONFIG__DEFAULT__SESSION__REDIS__HOST=redis
# CONFIG__DEFAULT__SESSION__REDIS__PORT=6379
# CONFIG__DEFAULT__SESSION__REDIS__DATABASE=1

# =============================================================================
# Elasticsearch Configuration
# =============================================================================
ELASTICSEARCH_HOST=elasticsearch
ELASTICSEARCH_PORT=9200

# =============================================================================
# Admin URL Configuration
# =============================================================================
# CONFIG__DEFAULT__ADMIN__URL__CUSTOM=https://example.com/admin
# CONFIG__DEFAULT__ADMIN__URL__USE_CUSTOM=1

# =============================================================================
# Email/SMTP Configuration
# =============================================================================
# CONFIG__DEFAULT__SYSTEM__SMTP__HOST=smtp.example.com
# CONFIG__DEFAULT__SYSTEM__SMTP__PORT=587
# CONFIG__DEFAULT__SYSTEM__SMTP__AUTH=login
# CONFIG__DEFAULT__SYSTEM__SMTP__USERNAME=user@example.com
# CONFIG__DEFAULT__SYSTEM__SMTP__PASSWORD=smtp_password

# =============================================================================
# Payment Gateway Credentials
# =============================================================================
# PAYMENT_GATEWAY_API_KEY=your_api_key
# PAYMENT_GATEWAY_SECRET_KEY=your_secret_key

# =============================================================================
# Third-party Service Credentials
# =============================================================================
# GOOGLE_ANALYTICS_ID=UA-XXXXX-Y
# FACEBOOK_PIXEL_ID=123456789

# =============================================================================
# Development Settings (use in .env.dev)
# =============================================================================
# CONFIG__DEFAULT__DEV__DEBUG__TEMPLATE_HINTS_STOREFRONT=1
# CONFIG__DEFAULT__DEV__DEBUG__TEMPLATE_HINTS_ADMIN=1
# CONFIG__DEFAULT__DEV__DEBUG__TEMPLATE_HINTS_BLOCKS=1

# =============================================================================
# Production Settings (use in .env.prod)
# =============================================================================
# CONFIG__DEFAULT__SYSTEM__FULL_PAGE_CACHE__CACHING_APPLICATION=2
# CONFIG__DEFAULT__DEV__JS__MERGE_FILES=1
# CONFIG__DEFAULT__DEV__CSS__MERGE_CSS_FILES=1
