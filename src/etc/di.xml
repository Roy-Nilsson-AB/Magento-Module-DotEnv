<?xml version="1.0"?>
<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:ObjectManager/etc/config.xsd">
    <!-- Plugin to prevent writes to config files -->
    <type name="Magento\Framework\App\DeploymentConfig\Writer">
        <plugin name="rnab_dotenv_prevent_config_write"
                type="Rnab\DotEnv\Plugin\PreventConfigFileWritePlugin"
                sortOrder="10" />
    </type>

    <!-- CLI commands -->
    <type name="Magento\Framework\Console\CommandListInterface">
        <arguments>
            <argument name="commands" xsi:type="array">
                <item name="dotenv_show" xsi:type="object">Rnab\DotEnv\Console\Command\ShowEnvCommand</item>
            </argument>
        </arguments>
    </type>
</config>
